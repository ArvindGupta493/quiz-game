<script>
  const btn = document.getElementById('notif-btn');
  const menu = document.getElementById('notif-menu');

  btn.addEventListener('click', () => {
    menu.classList.toggle('hidden');
  });

  // Optional: Close when clicking outside
  window.addEventListener('click', function (e) {
    if (!btn.contains(e.target) && !menu.contains(e.target)) {
      menu.classList.add('hidden');
    }
  });
</script>
<script>
  const Quizbtn = document.getElementById('addQuizbutton');
  const Quizpopup = document.getElementById('addquizpopup');
  const QuizClose = document.getElementById('quizpopup-close');

  // Open popup
  Quizbtn.addEventListener('click', () => {
    Quizpopup.classList.toggle('hidden');
  });

  // Close popup when clicking outside
  window.addEventListener('click', function (e) {
    if (!Quizbtn.contains(e.target) && !Quizpopup.contains(e.target)) {
      Quizpopup.classList.add('hidden');
    }
  });

  // Close popup when clicking close button
  QuizClose.addEventListener('click', () => {
