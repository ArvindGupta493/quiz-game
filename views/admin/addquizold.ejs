<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gaming Hub - Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex h-screen bg-gray-100">

  <!-- Sidebar -->
  <aside class="w-64 bg-gray-900 text-white flex flex-col">
    <div class="p-4 text-2xl font-bold border-b border-gray-700">Gaming Hub</div>
    <nav class="flex-1 p-4 space-y-2">
      <a href="/dashboard" class="block px-3 py-2 rounded hover:bg-gray-700">Dashboard</a>
      <a href="/questions" class="block px-3 py-2 rounded bg-gray-800">Questions</a>
      <a href="/users" class="block px-3 py-2 rounded hover:bg-gray-700">Users</a>
      <a href="/settings" class="block px-3 py-2 rounded hover:bg-gray-700">Settings</a>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 flex flex-col">
    <!-- Header -->
    <header class="bg-white shadow p-4 flex justify-between items-center">
      <h1 class="text-xl font-semibold">Manage Questions</h1>
      <button onclick="openAddQuestionModal()" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
        + Add Question
      </button>
    </header>

    <!-- Table -->
    <section class="p-4 overflow-x-auto flex-1">
      <table class="w-full bg-white border border-gray-200 rounded-lg shadow">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-2 border">#</th>
            <th class="px-4 py-2 border">Question</th>
            <th class="px-4 py-2 border">Option A</th>
            <th class="px-4 py-2 border">Option B</th>
            <th class="px-4 py-2 border">Option C</th>
            <th class="px-4 py-2 border">Option D</th>
            <th class="px-4 py-2 border">Correct Answer</th>
            <th class="px-4 py-2 border">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% questions.forEach((q, index) => { %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-2 border"><%= index + 1 %></td>
              <td class="px-4 py-2 border"><%= q.question %></td>
              <td class="px-4 py-2 border"><%= q.options[0] %></td>
              <td class="px-4 py-2 border"><%= q.options[1] %></td>
              <td class="px-4 py-2 border"><%= q.options[2] %></td>
              <td class="px-4 py-2 border"><%= q.options[3] %></td>
              <td class="px-4 py-2 border text-green-600 font-semibold"><%= q.correctAnswer %></td>
              <td class="px-4 py-2 border space-x-2">
                <button class="px-2 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600">Edit</button>
                <button class="px-2 py-1 bg-red-500 text-white rounded hover:bg-red-600">Delete</button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </main>

  <!-- Add Question Modal -->
  <div id="addQuestionModal" class="fixed inset-0 hidden bg-black bg-opacity-50 items-center justify-center">
    <div class="bg-white rounded-lg shadow-lg w-full max-w-4xl p-6">
      <h2 class="text-lg font-semibold mb-4">Add New Question</h2>
      <form action="/questions/add" method="POST" class="space-y-4">
        <div>
          <label class="block mb-1 font-medium">Question</label>
          <textarea name="question" class="w-full border rounded p-2" rows="3" required></textarea>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block mb-1 font-medium">Option A</label>
            <input type="text" name="options[]" class="w-full border rounded p-2" required>
          </div>
          <div>
            <label class="block mb-1 font-medium">Option B</label>
            <input type="text" name="options[]" class="w-full border rounded p-2" required>
          </div>
          <div>
            <label class="block mb-1 font-medium">Option C</label>
            <input type="text" name="options[]" class="w-full border rounded p-2" required>
          </div>
          <div>
            <label class="block mb-1 font-medium">Option D</label>
            <input type="text" name="options[]" class="w-full border rounded p-2" required>
          </div>
        </div>
        <div>
          <label class="block mb-1 font-medium">Correct Answer</label>
          <select name="correctAnswer" class="w-full border rounded p-2" required>
            <option value="A">Option A</option>
            <option value="B">Option B</option>
            <option value="C">Option C</option>
            <option value="D">Option D</option>
          </select>
        </div>
        <div class="flex justify-end space-x-2">
          <button type="button" onclick="closeAddQuestionModal()" class="px-4 py-2 bg-gray-400 text-white rounded hover:bg-gray-500">Cancel</button>
          <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Save</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    function openAddQuestionModal() {
      document.getElementById('addQuestionModal').classList.remove('hidden');
      document.getElementById('addQuestionModal').classList.add('flex');
    }
    function closeAddQuestionModal() {
      document.getElementById('addQuestionModal').classList.add('hidden');
      document.getElementById('addQuestionModal').classList.remove('flex');
    }
  </script>
</body>
</html>
