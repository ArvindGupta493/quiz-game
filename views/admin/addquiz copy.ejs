<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gaming Hub</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        background: 'var(--background)',
                        foreground: 'var(--foreground)',
                        border: 'var(--border)',
                        ring: 'var(--ring)',
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="min-h-screen bg-gradient-to-br from-gray-900 via-black to-purple-900">
    <!-- Navbar -->
    <nav class="sticky top-0 z-50 bg-black/80 border-b border-purple-500/20 backdrop-blur-sm">
        <div class="px-6 py-4">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <div class="flex items-center space-x-3 dash-logo">
                    <img src="/images/gamehub-logo.png" alt="gamehub-logo">
                </div>

                <!-- Right Icons -->
                <div class="flex items-center space-x-2 md:space-x-4">
                    <button class="relative p-1 rounded-xl bg-gray-800/50 border border-purple-500/30 text-gray-400 hover:text-white hover:border-purple-400/60 transition-all duration-300 group">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                        </svg>
                        <div class="absolute inset-0 rounded-xl bg-purple-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </button>
                    <button class="relative p-1 rounded-xl bg-gray-800/50 border border-purple-500/30 text-gray-400 hover:text-white hover:border-purple-400/60 transition-all duration-300 group">
                        <svg class="w-8 h-8" fill="#9ca3af" version="1.2" viewBox="0 0 800 800" width="800" height="800">
                            <path class="s0" d="m605.99 553.17c-50.67-23.08-52.6-122.16-52.64-124.66v-66.48c0-63.98-38.76-118.99-93.84-142.41-0.12-32.9-26.68-59.62-59.31-59.62-32.64 0-59.2 26.72-59.32 59.61-55.07 23.43-93.83 78.44-93.83 142.42v66.47c-0.04 2.5-1.97 101.59-52.65 124.67-5.77 2.63-8.95 8.97-7.61 15.22 1.33 6.25 6.81 10.71 13.15 10.71h128.47c2.64 14.61 9.49 28.21 19.97 39.22 13.91 14.62 32.32 22.68 51.82 22.68 19.5 0 37.9-8.06 51.81-22.68 10.48-11.01 17.34-24.61 19.97-39.22h128.48c6.33 0 11.81-4.46 13.14-10.71 1.34-6.25-1.83-12.59-7.61-15.22zm-66.75-47.46c5.32 16.29 12.87 32.65 23.56 46.26h-325.21c10.7-13.61 18.24-29.97 23.57-46.26zm-139.04-318.58c14.76 0 27.24 10 31.15 23.64-10.06-2.1-20.48-3.21-31.15-3.21-10.67 0-21.09 1.1-31.15 3.21 3.91-13.64 16.39-23.64 31.15-23.64zm-126.26 241.46v-66.56c0-70.22 56.64-127.35 126.26-127.35 69.62 0 126.26 57.13 126.26 127.35v66.67c0.01 2.04 0.33 23.48 5.69 49.88h-263.9c5.36-26.42 5.67-47.9 5.69-49.99zm126.26 185.28c-20.53 0-38.44-14.92-44.19-34.77h88.38c-5.75 19.85-23.66 34.77-44.19 34.77z"/>
                        </svg>
                        <div class="absolute top-2 right-2 w-2 h-2 bg-red-500 rounded-full"></div>
                        <div class="absolute inset-0 rounded-xl bg-purple-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </button>
                    <button type="button" id="sidebar-toggle" class="relative p-1 rounded-xl bg-gray-800/50 border border-purple-500/30 text-gray-400 hover:text-white hover:border-purple-400/60 transition-all duration-300 group lg:hidden">
                        <span class="sr-only">Open sidebar</span>
                        <svg class="w-8 h-8" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </nav>
    <!-- Main Layout -->
    <div class="lg:flex">
        <!-- Sidebar -->
        <aside id="default-sidebar" class="fixed top-0 left-0 w-80 min-h-screen bg-gray-900/50 border-r border-purple-500/20 backdrop-blur-sm p-6 transform -translate-x-full transition-transform duration-300 ease-in-out lg:translate-x-0 lg:static lg:block z-50">
            <!-- Close button for mobile -->
            <button id="sidebar-close" class="relative p-1 rounded-xl bg-gray-800/80 border border-purple-500/30 text-gray-400 hover:text-white hover:border-purple-400/60 transition-all duration-300 group lg:hidden">
                âœ•
            </button>
            <!-- Profile Section -->
        <div class="relative mb-8 p-6 rounded-2xl bg-gradient-to-r from-purple-500/10 to-cyan-500/10 border border-purple-500/30 backdrop-blur-sm overflow-hidden">
                <div class="relative z-10 flex items-center space-x-4 mb-4">
                    <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-cyan-500 rounded-full p-0.5">
                        <div class="w-full h-full bg-gray-800 rounded-full flex items-center justify-center">
                            <span class="text-lg font-bold text-white">SA</span>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-lg font-bold text-white">Sarah</h3>
                        <p class="text-sm text-gray-400">Super Administrator</p>
                    </div>
                </div>
            <!-- Navigation Menu -->
            <nav>
                <ul class="space-y-2">
                    <li>
                        <a href="/admin" class="sidebar-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-300 group text-gray-400 hover:text-white hover:bg-gray-800/50 border border-transparent hover:border-purple-500/30">
                            <svg class="w-5 h-5 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                            </svg>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/add-question" class="sidebar-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-300 group text-gray-400 hover:text-white hover:bg-gray-800/50 border border-transparent hover:border-purple-500/30">
                            <svg class="w-5 h-5 group-hover:text-purple-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="plus" class="lucide lucide-plus h-5 w-5"><path d="M5 12h14"></path><path d="M12 5v14"></path></svg>
                            <span>Add Quiz</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/settings" class="sidebar-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-300 group text-gray-400 hover:text-white hover:bg-gray-800/50 border border-transparent hover:border-purple-500/30">
                            <svg class="w-5 h-5 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <span>Settings</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
        <!-- Main Content -->
        <main class="flex-1 p-8">
            <!-- Dashboard Page -->
            <section id="addQuiz" class="page-section active max-w-7xl mx-auto">
                <!-- Quiz Form -->
                <div class="bg-gradient-to-br from-purple-900/20 via-blue-900/20 to-cyan-900/20 glassmorphism border border-cyan-500/30 shadow-2xl shadow-purple-500/10 rounded-xl p-6">
                    <div class="flex items-center space-x-3 mb-6">
                        <div class="p-2 rounded-lg bg-gradient-to-r from-purple-500 to-cyan-500">
                            <i data-lucide="plus" class="h-6 w-6 text-white"></i>
                        </div>
                        <h2 class="text-xl text-white">Quiz Details</h2>
                    </div>
                    
                    <form action="add-question" method="POST" class="space-y-6">
                        <!-- Quiz Title -->
                        <div class="space-y-2">
                            <label for="quiz-title" class="text-gray-300 block">Quiz Title</label>
                            <input type="text" name="question" placeholder="Enter an engaging quiz title..." class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 text-white placeholder-gray-400 focus:border-cyan-400 focus:ring-2 focus:ring-cyan-400/20 transition-all duration-300 rounded-lg">
                        </div>
                        <!-- Options Grid -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="space-y-2">
                                <label for="option-a" class="text-gray-300 block">Option A</label>
                                <input type="text" name="option1" placeholder="First option..." class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 text-white placeholder-gray-400 focus:border-purple-400 focus:ring-2 focus:ring-purple-400/20 transition-all duration-300 rounded-lg">
                            </div>
                            
                            <div class="space-y-2">
                                <label for="option-b" class="text-gray-300 block">Option B</label>
                                <input type="text" name="option2" placeholder="Second option..." class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 text-white placeholder-gray-400 focus:border-blue-400 focus:ring-2 focus:ring-blue-400/20 transition-all duration-300 rounded-lg">
                            </div>
                            
                            <div class="space-y-2">
                                <label for="option-c" class="text-gray-300 block">Option C</label>
                                <input type="text" name="option3" placeholder="Third option..." class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 text-white placeholder-gray-400 focus:border-cyan-400 focus:ring-2 focus:ring-cyan-400/20 transition-all duration-300 rounded-lg">
                            </div>
                            
                            <div class="space-y-2">
                                <label for="option-d" class="text-gray-300 block">Option D</label>
                                <input type="text" name="option4" placeholder="Fourth option..." class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 text-white placeholder-gray-400 focus:border-pink-400 focus:ring-2 focus:ring-pink-400/20 transition-all duration-300 rounded-lg">
                            </div>
                        </div>

                        <!-- Correct Answer Selection -->
                        <div class="space-y-2">
                            <label class="text-gray-300 block">Correct Answer</label>
                            <select name="correctAnswer" class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 text-white focus:border-green-400 focus:ring-2 focus:ring-green-400/20 transition-all duration-300 rounded-lg">
                                <option value="">Select the correct answer...</option>
                                <option value="option1">Option A</option>
                                <option value="option2">Option B</option>
                                <option value="option3">Option C</option>
                                <option value="option4">Option D</option>
                            </select>
                        </div>

                        <!-- Submit Button -->
                        <div class="pt-6">
                            <button type="submit" id="submit-quiz" 
                                    class="w-full py-6 text-lg text-white font-semibold transition-all duration-300 rounded-lg bg-blue-600 text-blue-400">
                                <i data-lucide="plus" class="h-5 w-5 mr-2 inline"></i>
                                Create Quiz
                            </button>
                        </div>
                    </form>

                    <!-- Success State -->
                    <div id="quiz-success" class="text-center py-12 hidden">
                        <div class="mx-auto w-20 h-20 rounded-full bg-gradient-to-r from-green-500 to-emerald-500 flex items-center justify-center mb-6 animate-pulse">
                            <i data-lucide="check" class="h-10 w-10 text-white"></i>
                        </div>
                        <h3 class="text-2xl font-bold text-white mb-2">Quiz Created Successfully!</h3>
                        <p class="text-gray-400 mb-6">Your quiz has been added to the system.</p>
                        <div class="bg-gradient-to-r from-green-500/20 to-emerald-500/20 border border-green-500/30 rounded-lg p-4 max-w-md mx-auto">
                            <p class="text-green-400 font-medium">Redirecting to dashboard...</p>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>
    <script>
        const sidebar = document.getElementById("default-sidebar");
        const toggleBtn = document.getElementById("sidebar-toggle");
        const closeBtn = document.getElementById("sidebar-close");

        toggleBtn.addEventListener("click", () => {
            sidebar.classList.remove("-translate-x-full");
        });

        closeBtn.addEventListener("click", () => {
            sidebar.classList.add("-translate-x-full");
        });
    </script>
</body>
</html>