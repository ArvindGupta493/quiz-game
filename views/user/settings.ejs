                            </div>

                            <!-- Email -->
                            <div>
                                <label class="block text-gray-300 font-semibold mb-2">Email</label>
                                <input type="email" value="john.doe@gamehub.com" class="w-full px-4 py-3 bg-gray-800/50 border border-purple-500/30 rounded-xl text-white placeholder-gray-400 focus:border-purple-400/60 focus:outline-none focus:ring-2 focus:ring-purple-500/20">
                            </div>

                            <!-- Bio -->
                            <div>
                                <label class="block text-gray-300 font-semibold mb-2">Bio</label>
                                <textarea rows="3" class="w-full px-4 py-3 bg-gray-800/50 border border-purple-500/30 rounded-xl text-white placeholder-gray-400 focus:border-purple-400/60 focus:outline-none focus:ring-2 focus:ring-purple-500/20 resize-none">Professional gamer and esports enthusiast. Always ready for the next challenge!</textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Account Settings -->
                    <div class="bg-gray-900/50 border border-purple-500/20 rounded-2xl backdrop-blur-sm p-6">
                        <h3 class="text-xl font-bold text-white mb-6 flex items-center space-x-2">
                            <div class="w-2 h-2 bg-cyan-400 rounded-full"></div>
                            <span>Account Settings</span>
                        </h3>

                        <div class="space-y-6">
                            <!-- Change Password -->
                            <div>
                                <label class="block text-gray-300 font-semibold mb-2">Current Password</label>
                                <input type="password" placeholder="Enter current password" class="w-full px-4 py-3 bg-gray-800/50 border border-purple-500/30 rounded-xl text-white placeholder-gray-400 focus:border-purple-400/60 focus:outline-none focus:ring-2 focus:ring-purple-500/20">
                            </div>

                            <div>
                                <label class="block text-gray-300 font-semibold mb-2">New Password</label>
                                <input type="password" placeholder="Enter new password" class="w-full px-4 py-3 bg-gray-800/50 border border-purple-500/30 rounded-xl text-white placeholder-gray-400 focus:border-purple-400/60 focus:outline-none focus:ring-2 focus:ring-purple-500/20">
                            </div>

                            <!-- Notification Settings -->
                            <div class="pt-4 border-t border-gray-700/50">
                                <h4 class="text-lg font-semibold text-white mb-4">Preferences</h4>
                                
                                <div class="space-y-4">
                                    <!-- Notifications Toggle -->
                                    <div class="flex items-center justify-between">
                                        <div class="flex items-center space-x-3">
                                            <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5-5-5h5V12h5l-5-5-5 5h5v5z"></path>
                                            </svg>
                                            <div>
