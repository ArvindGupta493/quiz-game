<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= game.title || 'Gaming Hub' %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        background: 'var(--background)',
                        foreground: 'var(--foreground)',
                        border: 'var(--border)',
                        ring: 'var(--ring)',
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="min-h-screen bg-gradient-to-br from-gray-900 via-black to-purple-900">
    <!-- Navbar -->
    <nav class="sticky top-0 z-50 bg-black/80 border-b border-purple-500/20 backdrop-blur-sm">
        <div class="px-6 py-4">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <div class="flex items-center space-x-3 dash-logo">
                    <img src="/images/gamehub-logo.png" alt="gamehub-logo">
                </div>

                <!-- Right Icons -->
                <div class="flex items-center space-x-2 md:space-x-4">
                    <!-- Notifications -->
                    <button class="relative p-1 rounded-xl bg-gray-800/50 border border-purple-500/30 text-gray-400 hover:text-white hover:border-purple-400/60 transition-all duration-300 group">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                        </svg>
                        <div class="absolute inset-0 rounded-xl bg-purple-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </button>

                    <!-- Messages -->
                    <button class="relative p-1 rounded-xl bg-gray-800/50 border border-purple-500/30 text-gray-400 hover:text-white hover:border-purple-400/60 transition-all duration-300 group">
                        <svg class="w-8 h-8" fill="#9ca3af" version="1.2" viewBox="0 0 800 800" width="800" height="800">
                            <!-- SVG Path omitted for brevity -->
                        </svg>
                        <div class="absolute top-2 right-2 w-2 h-2 bg-red-500 rounded-full"></div>
                        <div class="absolute inset-0 rounded-xl bg-purple-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </button>

                    <!-- Sidebar toggle for mobile -->
                    <button type="button" id="sidebar-toggle" class="relative p-1 rounded-xl bg-gray-800/50 border border-purple-500/30 text-gray-400 hover:text-white hover:border-purple-400/60 transition-all duration-300 group lg:hidden">
                        <span class="sr-only">Open sidebar</span>
                        <svg class="w-8 h-8" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Layout -->
    <div class="lg:flex">
        <!-- Sidebar -->
        <aside id="default-sidebar" class="fixed top-0 left-0 w-80 min-h-screen bg-gray-900/50 border-r border-purple-500/20 backdrop-blur-sm p-6 transform -translate-x-full transition-transform duration-300 ease-in-out lg:translate-x-0 lg:static lg:block z-50">
            <button id="sidebar-close" class="relative p-1 rounded-xl bg-gray-800/80 border border-purple-500/30 text-gray-400 hover:text-white hover:border-purple-400/60 transition-all duration-300 group lg:hidden">âœ•</button>

            <!-- Profile Section -->
            <div class="relative mb-8 p-6 rounded-2xl bg-gradient-to-r from-purple-500/10 to-cyan-500/10 border border-purple-500/30 backdrop-blur-sm overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-r from-purple-500/5 to-cyan-500/5"></div>
                <div class="absolute top-0 right-0 w-20 h-20 bg-purple-500/20 rounded-full blur-2xl"></div>
                
                <div class="relative z-10 flex items-center space-x-4 mb-4">
                    <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-cyan-500 rounded-full p-0.5">
                        <div class="w-full h-full bg-gray-800 rounded-full flex items-center justify-center">
                            <span class="text-lg font-bold text-white"><%= user.initials %></span>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-lg font-bold text-white"><%= user.name %></h3>
                        <p class="text-sm text-gray-400"><%= user.role %></p>
                    </div>
                </div>
                
                <div class="relative z-10 bg-black/30 rounded-xl p-4">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-2">
                            <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10"/>
                            </svg>
                            <span class="text-gray-300">Earned Coins</span>
                        </div>
                        <span class="text-xl font-bold text-transparent bg-gradient-to-r from-yellow-400 to-orange-400 bg-clip-text"><%= user.coins %></span>
                    </div>
                </div>
            </div>

            <!-- Navigation Menu -->
               <nav>
                <ul class="space-y-2">
                    <li>
                        <a href="/" class="sidebar-item active w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-300 group text-gray-400 hover:text-white hover:bg-gray-800/50 border border-transparent hover:border-purple-500/30">
                            <svg class="w-5 h-5 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                            </svg>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="wallet" class="sidebar-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-300 group text-gray-400 hover:text-white hover:bg-gray-800/50 border border-transparent hover:border-purple-500/30">
                            <svg class="w-5 h-5 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                            <span>Wallet</span>
                        </a>
                    </li>
                    <li>
                        <a href="leaderboard" class="sidebar-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-300 group text-gray-400 hover:text-white hover:bg-gray-800/50 border border-transparent hover:border-purple-500/30">
                            <svg class="w-5 h-5 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                            </svg>
                            <span>Leaderboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="redeem" class="sidebar-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-300 group text-gray-400 hover:text-white hover:bg-gray-800/50 border border-transparent hover:border-purple-500/30">
                            <svg class="w-5 h-5 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                            </svg>
                            <span>Redeem</span>
                        </a>
                    </li>
                    <li>
                        <a href="gift" class="sidebar-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-300 group text-gray-400 hover:text-white hover:bg-gray-800/50 border border-transparent hover:border-purple-500/30">
                            <svg class="w-5 h-5 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                            </svg>
                            <span>Gift</span>
                        </a>
                    </li>
                    <li>
                        <a href="history" class="sidebar-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-300 group text-gray-400 hover:text-white hover:bg-gray-800/50 border border-transparent hover:border-purple-500/30">
                            <svg class="w-5 h-5 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span>History</span>
                        </a>
                    </li>
                    <li>
                        <a href="settings" class="sidebar-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-300 group text-gray-400 hover:text-white hover:bg-gray-800/50 border border-transparent hover:border-purple-500/30">
                            <svg class="w-5 h-5 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <span>Settings</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
    
        <!-- Main Content -->
        <main class="flex-1 p-8">
            <section id="game-view" class="page-section max-w-7xl mx-auto">
                <a href="/" class="flex items-center space-x-2 text-gray-400 hover:text-white transition-colors mb-6">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                    <span>Back to Dashboard</span>
                </a>

                <!-- Game Header -->
                <div class="flex items-center space-x-6 mb-8">
                    <div class="w-24 h-24 rounded-2xl overflow-hidden border-2 border-purple-500/30">
                        <img id="game-view-logo" src="<%= game.logo %>" alt="<%= game.title %>" class="w-full h-full object-cover">
                    </div>
                    <div>
                        <h1 id="game-view-title" class="text-4xl font-bold text-white mb-2"><%= game.title %></h1>
                        <p id="game-view-genre" class="text-gray-400 mb-2"><%= game.genre %></p>
                        <div class="flex items-center space-x-4">
                            <div class="flex items-center space-x-1">
                                <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 24 24">
                                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                </svg>
                                <span class="text-white font-semibold"><%= game.rating %></span>
                            </div>
                            <div class="flex items-center space-x-1">
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span id="game-view-playtime" class="text-gray-400"><%= game.playtime %></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Game Description -->
                <div class="bg-gray-900/50 border border-purple-500/20 rounded-2xl backdrop-blur-sm p-6 mb-6">
                    <h3 class="text-xl font-bold text-white mb-4">About This Game</h3>
                    <p id="game-view-description" class="text-gray-300 leading-relaxed"><%= game.description %></p>
                </div>

                <!-- Achievements -->
                <div class="bg-gray-900/50 border border-purple-500/20 rounded-2xl backdrop-blur-sm p-6 mb-6">
                    <h3 class="text-xl font-bold text-white mb-4 flex items-center space-x-2">
                        <svg class="w-5 h-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                        </svg>
                        <span>Achievements</span>
                    </h3>
                    <div class="space-y-3" id="game-view-achievements">
                        <% game.achievements.forEach(achievement => { %>
                            <div class="text-gray-300">â€¢ <%= achievement %></div>
                        <% }) %>
                    </div>
                </div>

                <!-- Stats -->
                <div class="bg-gray-900/50 border border-purple-500/20 rounded-2xl backdrop-blur-sm p-6">
                    <h3 class="text-xl font-bold text-white mb-4">Your Stats</h3>
                    <div class="space-y-4">
                        <div class="flex justify-between items-center">
                            <span class="text-gray-400">Playtime</span>
                            <span id="game-view-stats-playtime" class="text-white font-semibold"><%= user.stats.playtime %></span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-gray-400">Best Score</span>
                            <span class="text-white font-semibold"><%= user.stats.bestScore %></span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-gray-400">Win Rate</span>
                            <span class="text-green-400 font-semibold"><%= user.stats.winRate %></span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-gray-400">Rank</span>
                            <span class="text-purple-400 font-semibold"><%= user.stats.rank %></span>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script>
        const sidebar = document.getElementById("default-sidebar");
        const toggleBtn = document.getElementById("sidebar-toggle");
        const closeBtn = document.getElementById("sidebar-close");

        toggleBtn.addEventListener("click", () => {
            sidebar.classList.remove("-translate-x-full");
        });

        closeBtn.addEventListener("click", () => {
            sidebar.classList.add("-translate-x-full");
        });
    </script>
</body>
</html>
