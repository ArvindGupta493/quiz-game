                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                            </svg>
                            <span>Gift</span>
                        </a>
                    </li>
                    <li>
                        <a href="history" class="sidebar-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-300 group text-gray-400 hover:text-white hover:bg-gray-800/50 border border-transparent hover:border-purple-500/30">
                            <svg class="w-5 h-5 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span>History</span>
                        </a>
                    </li>
                    <li>
                        <a href="settings" class="sidebar-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-300 group text-gray-400 hover:text-white hover:bg-gray-800/50 border border-transparent hover:border-purple-500/30">
                            <svg class="w-5 h-5 group-hover:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <span>Settings</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
        <!-- Main Content -->
        <main class="flex-1 p-8">
            <!-- Game View Page -->
            <section id="game-view" class="page-section max-w-7xl mx-auto">
     
                <!-- Game Header -->
                <div class="flex items-center space-x-6 mb-8">
                    <div class="w-24 h-24 rounded-2xl overflow-hidden border-2 border-purple-500/30">
                        <img id="game-view-logo" src="images/SmartQuiz.png" alt="Smart Quiz" class="w-full h-full object-cover">
                    </div>
                    <div>
                        <h1 id="game-view-title" class="text-4xl font-bold text-white mb-2"></h1>
                        <p id="game-view-genre" class="text-gray-400 mb-2"></p>
                    </div>
                </div>
                <!-- Quiz Section -->
                <div class="bg-gradient-to-br from-gray-900/40 via-black/40 to-purple-900/40 glassmorphism border border-cyan-500/30 shadow-2xl shadow-purple-500/10 rounded-xl p-6">
                    <div class="flex items-center justify-between mb-6">
                        <div class="flex items-center space-x-3">
                            <div class="p-2 rounded-lg bg-gradient-to-r from-blue-500 to-cyan-500">
                                <i data-lucide="trophy" class="h-6 w-6 text-white"></i>
                            </div>
                            <h2 class="text-xl text-white">Gaming Legends Quiz #1</h2>
                        </div>
                        <span class="px-3 py-1 bg-gradient-to-r from-green-500/20 to-emerald-500/20 text-green-400 border border-green-500/30 rounded-full text-sm">
                            Active Quiz
                        </span>
                    </div>
                    
                    <!-- Quiz Content -->
                    <!-- Quiz Content -->
                    <form id="quiz-form" action="/submit-answer" method="POST" class="space-y-6">
                        <!-- Question -->
                        <div class="p-6 rounded-xl bg-gradient-to-r from-purple-500/10 via-blue-500/10 to-cyan-500/10 border border-cyan-500/20 glassmorphism">
                            <h3 class="text-xl font-semibold text-white mb-4">Question <%= index + 1 %> of <%= questions.length %>:</h3>
                            <p class="text-lg text-gray-200 leading-relaxed"><%= questions[index].question %></p>
                        </div>

                        <!-- Options -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <% questions[index].options.forEach((opt, i) => { 
                                const optionLabel = String.fromCharCode(65 + i); // A, B, C, D
                            %>
                            <label for="option-<%= i %>" class="quiz-option p-6 rounded-xl bg-gradient-to-r from-purple-500/20 to-purple-600/20 border border-purple-500/30 hover:from-purple-500/30 hover:to-purple-600/30 hover:border-purple-400/50 glassmorphism transition-all duration-300 text-left group transform hover:scale-105 cursor-pointer flex items-center space-x-4
                            peer-checked:bg-gradient-to-r peer-checked:from-green-400/30 peer-checked:to-green-500/30 peer-checked:border-green-400">
                                <input type="radio" name="answer" id="option-<%= i %>" value="<%= opt %>" class="peer hidden" required>
                                <div class="w-8 h-8 rounded-full border-2 border-gray-500 text-gray-400 flex items-center justify-center font-bold transition-all duration-300 peer-checked:border-white peer-checked:text-green-500">
                                    <%= optionLabel %>
                                </div>
                                <span class="text-white font-medium text-lg peer-checked:text-green-500"><%= opt %></span>
                            </label>
                            <% }) %>
                        </div>

                        <!-- Hidden inputs -->
                        <input type="hidden" name="username" value="<%= username %>">
                        <input type="hidden" name="index" value="<%= index %>">

                        <!-- Submit Button -->
                        <div class="pt-6">
                            <button type="submit" class="w-full py-4 text-lg font-semibold transition-all duration-300 rounded-lg bg-gradient-to-r from-purple-500 to-blue-500 text-white hover:from-purple-600 hover:to-blue-600">
                                Next
                            </button>
                        </div>
                    </form>

                    
                    <!-- Submitted State -->
                    <div id="quiz-submitted" class="text-center py-12 hidden">
                        <div class="mx-auto w-20 h-20 rounded-full bg-gradient-to-r from-green-500 to-emerald-500 flex items-center justify-center mb-6 animate-pulse">
                            <svg class="w-12 h-12" viewBox="0 0 24 24" fill="none"><path d="M4 12.6111L8.92308 17.5L20 6.5" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                        </div>
                        <h3 class="text-3xl font-bold text-white text-green-400 mb-4">Correct Answer!</h3>
                        <div class="mt-8">
                            <button onclick="showPage('dashboard')" class="px-8 py-3 bg-gradient-to-r from-purple-500 via-blue-500 to-cyan-500 hover:from-purple-600 hover:via-blue-600 hover:to-cyan-600 text-white border-0 shadow-lg shadow-cyan-500/25 hover:shadow-xl hover:shadow-cyan-500/40 transition-all duration-300 transform hover:scale-105 rounded-lg">
                                Return to Dashboard
                            </button>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>
</body>
<script>
    const sidebar = document.getElementById("default-sidebar");
    const toggleBtn = document.getElementById("sidebar-toggle");
    const closeBtn = document.getElementById("sidebar-close");

    toggleBtn.addEventListener("click", () => {
        sidebar.classList.remove("-translate-x-full");
    });

    closeBtn.addEventListener("click", () => {
        sidebar.classList.add("-translate-x-full");
    });
</script>
<script>
  const btn = document.getElementById('notif-btn');
  const menu = document.getElementById('notif-menu');

  btn.addEventListener('click', () => {
    menu.classList.toggle('hidden');
  });

  // Optional: Close when clicking outside
  window.addEventListener('click', function (e) {
    if (!btn.contains(e.target) && !menu.contains(e.target)) {
      menu.classList.add('hidden');
    }
  });
</script>
</html>